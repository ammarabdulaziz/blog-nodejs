<div class="container">
    <div class="col-12 col-md-6">
        <table class="table" id="blog-table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Category</th>
                    <th scope="col" id="edit"></th>
                    <th scope="col" id="delete"></th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <th scope="row">{{this.category}}</th>
                    <td><a class="btn btn-sm btn-info" href="/admin/edit-category?id={{this._id}}"><i
                                class="fa fa-edit"></i></a></td>
                    <td><a class="btn btn-sm btn-danger" href="/admin/delete-category?id={{this._id}}"
                            onclick="return confirm('Are you sure you want to delete this Category?')"><i
                                class="fa fa-trash-o"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>
</div>