<link rel="stylesheet" href="/stylesheets/login.css">
<div class="conatiner">
    <div class="col-12 col-md-5 box">
        <div class="login-box">
            <div class="login-image">
                <h4 class="login-text">ADMIN LOGIN</h4>
            </div>
            <form action="/login" method="POST" class="login-form p-4">
                <div class="form-group">
                    <div class="row">
                        <label for="username" class="offset-md-1 col-md-3">Username</label>
                        <div class="col-md-7">
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="password" class="offset-md-1 col-md-3">Password</label>
                        <div class="col-md-7">
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-sm">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>