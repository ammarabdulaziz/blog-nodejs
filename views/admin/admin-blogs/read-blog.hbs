<div class="container">
    <div class="row">
        <div class="col-12 col-lg-8 ">
            <!-- Posts -->
            <div class="row">
                <div class="col-12 post-image">
                    <img src="/blog-images/{{blog._id}}.png" class="img-fluid post-image" alt="">
                </div>
                <div class="col-12">
                    <div class="post-head pl-2 pt-1">
                        <div class="post-title">{{blog.title}}</div>
                        <div class="post-date">Posted on <span>{{blog.date}}</span></div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 post-content pt-1">{{blog.blog}}</div>
                            <div class="col-12 read-more">
                                <a href="/admin/edit-blog?id={{blog._id}}" class="btn btn-primary" style="width: 80px;">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>
    </div>
    <br>
</div>