<br>
<div class="container">
    <div class="row">
        <div class="col-12 col-lg-7 ">
            <!-- breadcrumb -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./index.html">Home</a></li>
                <li class="breadcrumb-item active">{{blogs.[0].category}}</li>
            </ol>
            <!-- Posts -->
            {{#each blogs}}
            <div class="row">
                <div class="col-12">
                    <div class="post-head">
                        <div class="post-title">{{this.title}}</div>
                        <div class="post-date">Posted on <span>{{this.date}}</span></div>
                    </div>
                </div>
                <div class="col-12 post-image">
                    <img src="/blog-images/{{this._id}}.png" class="img-fluid post-image" alt="">
                </div>
                <div class="col-12">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 post-content">{{this.blog}}</div>
                            <div class="col-12 read-more">
                                <a href="/read-more?id={{this._id}}" class="btn btn-primary">READ MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            {{/each}}
            <!-- ----------------------------------------- -->
            <!-- Pagenation -->
            <div class="col-12 pagenation">
                <div class="pagenation-btn"><a href="#" class="btn active">1</a></div>
                <div class="pagenation-btn"><a href="#" class="btn">2</a></div>
                <div class="pagenation-btn"><a href="#" class="btn">3</a></div>
                <div class="pagenation-btn"><a href="#" class="btn">Next</a></div>
            </div>
            <br>
            <!-- Pagenation Ends -->
        </div>
        <!-- --------------------------------------------------------- -->
        <div class="col-12 col-lg-5 ">
            <!-- breadcrumb -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Recent Posts</li>
            </ol>
            <!-- Recent posts -->
            {{#each recentBlogs}}
            <div class="row recent-post">
                <div class="col-5 p-0">
                    <img src="/blog-images/{{this._id}}.png" class="img-fluid recent-post-image" alt="">
                </div>
                <div class="col-7 my-auto p-3 recent-post-content">
                    <div class="recent-post-category">{{this.category}}</div>
                    <div class="recent-post-title">{{this.title}}</div>
                    <div class="recent-post-date">{{this.date}}</div>
                </div>
            </div>
            {{/each}}
            <!-- Recent Posts End -->
            <!-- Categories -->
            <div class="categories">
                <div class="categories-title">Categories</div>
                <ul>
                    {{!-- Do console log and check the data format. Here _id = category name, categoryLookup._id= categoryId --}}
                    {{#each categoryDetails}}
                    <li><i class="square-icon"></i><a href="/category?id={{this.categoryLookup._id}}">{{this._id}} ({{this.count}})</a></li>
                    <hr>
                    {{/each}}
                </ul>
            </div>
            <!-- Categories end-->
        </div>
    </div>
    <br>
</div>